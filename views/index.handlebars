<h1>BURGERS</h1>

<h2>Burgers that have been DEVOURED!</h2>

<ul>
{{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.id}}
              {{this.burger_name}}

            </li>
          {{/if}}
        {{/each}}
</ul>

<h2>Burgers that have NOT been devoured!</h2>

<ul>
      {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.id}}
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button class="btn-primary" type="submit">Devour It!</button>
              </form>

            </li>
          {{/unless}}
        {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Devoured<br>
    <input type="radio" name="sleepy" value="0"> No
  </div>

  <button type="submit">Add Burger</button>
</form>
